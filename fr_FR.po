#: en.adoc:457
#, no-wrap
msgid "Monitor:"
msgstr ""

#. type: Plain text
#: en.adoc:459
msgid "dispositional states;"
msgstr ""

#. type: Plain text
#: en.adoc:460
msgid "propensities;"
msgstr ""

#. type: Plain text
#: en.adoc:461
msgid "identities;"
msgstr ""

#. type: Plain text
#: en.adoc:462
msgid "attractors;"
msgstr ""

